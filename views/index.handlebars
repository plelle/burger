<h1>Burgers</h1>

<h2>Burgers that I haven't eaten</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
        <button type="submit">Devour It!</button>
        </form>

        {{> burgers/delete-burger}}
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that I have eaten</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}

    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
        <label for="bgr">Burger Name:</label>
        <input type="text" id="bgr" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>